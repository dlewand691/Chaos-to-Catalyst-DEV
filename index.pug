include _mixins.pug

mixin covidArticle-default(...elements)
  each item in elements
    .card.mb0.bd0.h100.hover-grow.relative
      .relative.w100.flex-basis-img
        img.w100.object-fit-cover.absolute.lazyload(data-sizes="auto" data-src=item.image)
      .card-section
        p.small.text-blue-light.mb-half.text-caps!= item.eyebrow
        h6!= item.title
        p.small!= item.paragraph
      .card-divider.pt0
        a.arrow.small.link-coverAll(href!=attributes.href=item.link data-open!=attributes.data=item.revealID title=item.buttonText target="_blank" rel="noopener")!= item.buttonText

mixin covidArticle(...elements)
  // 
    ===================================================================================
    COVID ARTICLE
    ===================================================================================
  each item in elements
    if item.useVideo == false
      +covidArticle-default(...elements)

    else
      +covidArticle-default(...elements)
      .reveal.bd0.medium-p3.full.ease-in-out(id=item.revealID data-reveal data-animation-in="slide-in-right" data-animation-out="slide-out-right" data-reset-on-close="true")
        video.wh100.video-js.vjs-default-skin.lazyload(controls width="640" height="264" data-setup='{ "techOrder": ["youtube"], "sources": [{ "type": "video/youtube", "src": "' + item.youtubeUrl + '"}], "youtube": { "customVars": { "wmode": "transparent" } } }')
        button.close-button.z2(data-close=item.revealID aria-label="Close modal" type="button")
          h5.text-white
            span(aria-hidden="true") 
              i.close
  // -----  End of ADDITIONAL RESOURCES  -----------------------------------

